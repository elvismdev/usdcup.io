{% extends 'base.html.twig' %}

{% block title %}Hello HighchartsJSController!{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  {{ encore_entry_link_tags('highcharts') }}
{% endblock %}

{% block body %}
<style>
    .example-wrapper { max-width: 1200px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h2>Historial</h2>
    <div id="pricehistorychart" style="min-width: 400px; height: 400px; margin: 0 auto"></div>
</div>
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  {{ encore_entry_script_tags('highcharts') }}
  <script src="https://code.highcharts.com/themes/dark-unica.js"></script>
  <script type="text/javascript">
    {{ chart(chart) }}
  </script>
 {% endblock %}